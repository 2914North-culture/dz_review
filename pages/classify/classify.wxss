@import '/common/font/iconfont.wxss';
@import '/template/goodsHome/goodsHome.wxss';

/* 头部导航栏 */
.classify-nav{
  width:100%;
  height:80rpx;
  background-color:#fff;
  position:relative;
  z-index:28;
  box-sizing:border-box;
}
/* 头部导航栏--导航菜单 */
.classify-nav .classify-nav-menu{
  width:100%;
  height:100%;
  display:flex;
  align-items:center;
}
.classify-nav .classify-nav-menu .menu-item{
  width:50%;
  flex-grow:1;
  display:flex;
  align-items:center;
  justify-content: center;
  font-size:28rpx;
}
.classify-nav .classify-nav-menu .classify-nav-divide{
  width:2rpx;
  height:36rpx;
  background-color:#9a9a9a;
}
/* 头部导航栏--导航菜单内容 */
.classify-nav .classify-nav-content{
  width:100%;
  height:auto;
  background-color:#fff;
  position:absolute;
  top:80rpx;
  left:0;
}
.classify-nav .classify-nav-content .content-item{
  position:absolute;
  width:100%;
  height:auto;
  top:0;
  left:0;
  background-color:#fff;
  padding:0 20rpx;
  box-sizing:border-box;
  box-shadow:2px 2px 3px #aaa;
}
.classify-nav .classify-nav-content .content-item view{
  font-size:26rpx;
  color:#9a9a9a;
  padding:14rpx 0;
  border-bottom:solid 2rpx #9a9a9a;
}
.classify-nav .classify-nav-content .content-item .font-active{
  color: orange !important;
}
.classify-nav .classify-nav-content .content-item view:last-child{
  border:none;
}
/* 加载商品项 */
.classify-list-all{
  position:absolute;
  width:100%;
  top:80rpx;
  bottom:0;
  left:0;
  background-color:#fff;
  padding:0 28rpx;
  box-sizing:border-box;
}
.classify-list-all .page-scroll{
  width:100%;
  height:100%;
}